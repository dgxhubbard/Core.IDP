
@page "/login"

 
@model LoginModel


@namespace Core.IDP.Pages


<form method="post">  <!-- asp-controller="Account" asp-action="Login" method="post" > -->
    
		<div class="row" >

			<div class="col-sm-6">

				<div class="card">

					<div class="card-header">
						<h2>Local Account</h2>
					</div>

					<div class="card-body">
							
						<div class="form-group row">
							<label class="col-sm-4 col-form-label" >Username</label>
							<div class="col-sm-8">
							<input type="text" required name="Username" asp-for="Username"  />
							</div>
						</div>

						<div class="form-group row">
							<label class="col-sm-4 col-form-label">Password</label>
							<div class="col-sm-8">
							<input type="password" required name="Password" asp-for="Password" />
							</div>
						</div>

						
						@if ( false )
								{
							<div class="form-group row">

								<label col-sm-4 col-form-label>
									Remember My Login
								</label>
								<div class="col-sm-8">

									<input type="checkbox"  />
								</div>


							</div>
						}

							
					</div>




				</div>




		    </div>


			<div class="row">

			<div class="col-sm-6 mt-3">
				<button class="btn btn-primary col-sm-4" type="submit">Login</button>
			</div>
			</div>

        </div>


</form>






